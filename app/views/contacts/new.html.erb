<%= form_with model: @contact do |f| %>
  <%= f.label :email, '送信先メールアドレス' %>
  <%= f.text_field :email %>
  <br>

  <%= f.label :subject, '問い合わせ要件' %>
  <%= f.select :subject, [ ["バグ・不具合の報告", "bag_report"], ["その他", "others"] ] %>
  <br>

  <%= f.label :message, '問い合わせ内容' %>
  <%= f.text_area :message %>
  <br>

  <%= f.submit '送信する' %>
<% end %>