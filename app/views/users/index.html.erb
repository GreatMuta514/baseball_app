<p id="notice"><%= notice %></p>

<h1><%= t".title" %></h1>

<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:nickname) %></th>
      <th><%= User.human_attribute_name(:email) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nickname %></td>
        <td><%= user.email %></td>
        <td><%= user.password %></td>
        <td><%= user.password_confirmation %></td>
        <td><%= link_to t(".show"), user %></td>
        <td><%= link_to t(".edit"), edit_user_path(user) %></td>
        <td><%= link_to t(".destroy"), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
