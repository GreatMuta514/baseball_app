<%= form_with url: login_path, method: :post do |f| %>
  <div class="field">
    <%= f.label User.human_attribute_name(:email), class: 'form-label' %><br/>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="field mb-3">
    <%= f.label User.human_attribute_name(:password), class: 'form-label' %><br/>
    <%= f.password_field :password, class: 'form-control'%>
  </div>
  <div class="actions">
    <%= f.submit t(".button"), class:'btn btn-primary' %>
  </div>
<% end %>