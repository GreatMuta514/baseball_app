<%= form_with url: login_path, method: :post do |f| %>
  <div class="field">
    <%= f.label User.human_attribute_name(:email) %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label User.human_attribute_name(:password) %><br />
    <%= f.password_field :password %>
  </div>
  <div class="actions">
    <%= f.submit t(".button") %>
  </div>
<% end %>