<% breadcrumb :chatroom, @chatroom %>
<div id="data" data-chatroom-id="<%= @chatroom.id %>"></div>
<div class="container">
  <h1 style="position: fixed; top: 80px; right: 0; left: 0; z-index: 1010; background-color: white;"><%= @chatroom.pro_game.first_base_side_pro_team %> - <%= @chatroom.pro_game.third_base_side_pro_team %></h1>
  <div style="padding-top: 80px; padding-bottom:110px;">
    <div id="chat_container">
      <%= render partial: 'chat', collection: @chats, class:'float-end' %>
    </div>
  </div>
  <div class="mt-3" style=" flex-grow: 1; width:100%; position: relative; position: fixed; bottom: 20px;">
    <%= form_with url: chatroom_chats_url(@chatroom), local: false do |form| %>
      <div class="row">
       <div class="col px-0"><%= form.text_field :body, id: 'submitting_chat_content', class: 'form-control ms-3' %></div>
       <div class="col px-0 text-start ms-4" id="chat_submit_button"><%= form.submit "送信", class: 'btn btn-primary disabled', id: 'chat_button' %></div>
       <div><p>（100文字以内）</p></div>
      </div>
    <% end %>
  </div>
</div>
